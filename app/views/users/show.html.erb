<!-- user GET  /profile/:id(.:format)  users#show -->

<div class="profile">
	<img src="<%= @user.image.picture if @user.image%>"> <br>
<h2><%= @user.first_name %> <%= @user.last_name %></h2>	
<ul class="profile_stats">
	<li><%= @user.email %></li>
	<li><%= @user.current_location %></li>
</ul>

<button class="button"><%= link_to 'Edit Profile', edit_user_url(@user) %></button>

<h3>Memberships</h3>
<ul class="profile_stats">
	<% @user.groups.each do |group| %>
	<li><%= link_to group.name %> - <strong>Jefe:</strong> <%= group.jefe.first_name %> <%= group.jefe.last_name %></li>
	<br>
<% end %>
</ul>
</div>