<% if @snippet %>
	<%= form_for [@group, @post_or_snippet_creator, @snippet, @comment] do |f| %>
		<%= f.label :content %>
		<%= f.text_area :content %>
		<br>
		<%= f.submit %>
	<% end %>
<% elsif @post %>
	<%= form_for [@group, @post_or_snippet_creator, @post, @comment] do |f| %>
		<%= f.label :content %>
		<%= f.text_area :content %>
		<br>
		<%= f.submit %>
	<% end %>
<% end %>