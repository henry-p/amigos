<div class="post">
	<h1> <%= @post.title %> </h1>
	<% if @images  %>
		<% @images.each do |image| %>
		<img src="<%= image.picture.url %>">
		<% end %>
	<% end %>
	<p> <%= @post.content %></p>
	<% if @comments %>
		<% @comments.each do |comment| %>
			<div class="comment">
				<h5><%=User.find_by_id(comment.creator_id).first_name%>  <%=User.find_by_id(comment.creator_id).last_name%> - <%= comment.created_at.strftime("%B, %d, %Y") %></h5>
				<%= comment.content %>
			</div>
		<% end %>
	<% end %>
	<br>
	<br>
<%= link_to "comment", new_group_user_post_comment_path(@post.group, @post.creator, @post)%>
<%= link_to "Edit", edit_group_user_post_path %>
<%= link_to "Delete", [@post.group, @post.creator, @post], method: :delete %>
</div>
<br>
<%= link_to "Back to posts", group_user_posts_path %>