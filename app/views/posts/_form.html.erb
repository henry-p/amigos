<%= form_for [@group, @user, @post], :html => { :multipart => true } do |f| %>
  <p>
	  <%= f.file_field :picture, :multiple => true %>
  </p>
  <p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :content %>
		<%= f.text_area :content %>
	</p>
	<%= f.submit %>
<% end %>