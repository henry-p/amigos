<%= form_for(resource, as: resource_name,
                       url: session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, placeholder: 'Email', autofocus: true %></div>

  <div><%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.label :remember_me %><%= f.check_box :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in" %></div>
<%= render "devise/shared/links" %>
<% end %>

